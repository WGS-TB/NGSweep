<tool id="kraken_trim" name="Trim contaminated reads" version="0.1.0">
    <description>using Kraken reports</description>
    <requirements>
        <requirement type="package" version="3.1.1">ete3</requirement>
    </requirements>
    <command><![CDATA[
        $__tool_directory__/refseq_parser -i #for $report in $reports# $report #end for# --taxid $taxid
    ]]></command>
    <inputs>
        <conditional name="fastq_input">
            <param name="input_type" type="select" label="Single or Paired-end reads">
                <option value="paired">Paired</option>
                <option value="single">Single</option>
                <option value="paired_collection">Paired Collection</option>
                <option value="single_collection">Single Collection</option>
            </param>
            <when value="paired">
                <param name="fastq1" type="data" format="fastqsanger,fastqsanger.gz,fastq,fastq.gz,fasta"
                       label="Select fastq dataset with forward reads"/>
                <param name="fastq2" type="data" format="fastqsanger,fastqsanger.gz,fastq,fastq.gz,fasta"
                       label="Select fastq dataset with reverse reads"/>
            </when>
            <when value="single">
                <param name="fastq1" type="data" format="fastqsanger,fastqsanger.gz,fastq,fastq.gz,fasta"
                       label="Select fastq dataset"/>
            </when>
            <when value="paired_collection">
                <param name="fastq1" type="data_collection" collection_type="paired"
                       format="fastqsanger,fastqsanger.gz,fastq,fastq.gz,fasta" label="Select paired collection"/>
            </when>
            <when value="single_collection">
                <param name="fastq1" type="data_collection" collection_type="list"
                       format="fastqsanger,fastqsanger.gz,fastq,fastq.gz,fasta" label="Select single collection"
            </when>
        </conditional>
        <param name="reports" type="data" format="tabular" label="Refseq_masher report" help="" optional="false" multiple="True" />
        <param name="taxid" type="integer" label="Taxonomic ID of target taxonomic rank" optional="false"/>
    </inputs>
    <outputs>
        <data name="fastq_trim" label="Trimmed FASTQ" format="fastqsanger.gz"
              from_work_dir="kraken_trim/$fastq1"/>
        <data name="fastq2_trim"  label="Trimmed FASTQ (reverse mate)" format="fastqsanger.gz"
              from_work_dir="kraken_trim/$fastq2"/>
    </outputs>

    <tests>
        <test>

        </test>
    </tests>

    <help><![CDATA[

    ]]></help>

    <citations>
        Manuscript in preparation
    </citations>
</tool>
